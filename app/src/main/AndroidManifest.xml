<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhijeet.patientbillingsoftware">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.Register"/>
        <activity android:name=".Activities.HomeActivity"/>
        <activity android:name=".Activities.PatientActivity"/>
        <activity android:name=".Activities.ReportActivity"/>
        <activity android:name=".Activities.AddPatientActivity"/>
        <activity android:name=".Activities.ReportGenerationActivity"/>
        <activity android:name=".Activities.BillingActivity"/>
    </application>

</manifest>